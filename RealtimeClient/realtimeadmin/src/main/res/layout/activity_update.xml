<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vehicle Updation"
        android:textSize="30sp"
        android:textAlignment="center"
        android:background="@color/green"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_margin="30dp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/green_border"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.735">
        <!--        Vehicle Number-->
        <EditText
            android:id="@+id/vehicleNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:autofillHints="name"
            android:background="@drawable/green_border"
            android:hint="Vehicle Number"
            android:inputType="text"
            android:padding="10dp"
            android:textAlignment="center"
            android:textSize="25sp" />

        <!--        Vehicle Owner Name -->
        <EditText
            android:id="@+id/vehicleOwnerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:autofillHints="name"
            android:background="@drawable/green_border"
            android:hint="Vehicle Owner Name"
            android:inputType="text"
            android:padding="10dp"
            android:textAlignment="center"
            android:textSize="25sp" />

        <!--        Vehicle Brand Name -->
        <EditText
            android:id="@+id/vehicleBrandName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:autofillHints="name"
            android:background="@drawable/green_border"
            android:hint="Vehicle Brand Name"
            android:inputType="text"
            android:padding="10dp"
            android:textAlignment="center"
            android:textSize="25sp" />

        <!--        Vehicle RTO -->
        <EditText
            android:id="@+id/vehicleRTO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:autofillHints="name"
            android:background="@drawable/green_border"
            android:hint="@string/vehicle_rto"
            android:inputType="text"
            android:padding="10dp"
            android:textAlignment="center"
            android:textSize="25sp" />

        <!--        Update Button -->
        <Button
            android:id="@+id/vehicleDataUpdateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:paddingTop="10dp"
            android:text="UPDATE"
            android:textSize="25sp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>